doctype html
html(lang="en")
  head
    include partials/header
  body
    header.bar
      h1 UpTask - Project Management
      a(href="#") Logout

    main.container
      aside.container-projects 
        .panel.create-project    
          a(href="/new-project" class="button") New Project
            span +
        .panel.list-projects
          h2 Projects 
          ul#projects.projects 
            if(projects.length > 0)
              each project in projects
                li
                  a(href=`/project/${project.url}`) #{project.name}
            else
              li No projects    


      block content
      
      //- pre #{varDump(projects)}
    script(src="/dist/bundle.js")
    