doctype html
html(lang="en")
  head
    include partials/header
  body.login
    .container-form 
      h1 Create a new count in UpTask 

      if locals.messages
        .alert
          each category in Object.keys(locals.messages)
            each error in messages[category]
              .alert(class=`${category}`)
                p #{error}

      form#form.box.box-login(method="post" action="/create-count")
        .campo 
          label(for="email") Email
          input(type="text" name="email" placeholder="Email" value= email)
        .campo
          label(for="password") Password
          input(type="password" name="password" placeholder="Password" value= password)
        .campo.send
          input.button(type="submit" value="Create count")
        .campo 
          a(href="/login") Login

    script(src="/dist/bundle.js")