doctype html
html(lang="en")
  head
    include partials/header
  body.login
    .container-form 
      h1 Login in UpTask 
      
      if Object.keys(locals.messages).length
        .alert
          each category in Object.keys(locals.messages)
            each error in messages[category]
              .alert(class=`${category}`)
                p #{error}

      form#form.box.box-login(method="post" action="/login")
        .campo 
          label(for="email") Email
          input(type="text" name="email" placeholder="Email" value= email)
        .campo
          label(for="password") Password
          input(type="password" name="password" placeholder="Password" value= password)
        .campo.send
          input.button(type="submit" value="Login")
        .campo.actions 
          a(href="/create-account") Create a new account
          a(href="/forgot-password") Forgot your password?